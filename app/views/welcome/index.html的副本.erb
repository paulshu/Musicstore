      <div class="product-box">
        <div class="container">
        <div class="row">
          <% @products.each_with_index do |product, index| %>
          <div class="col-xs-12 col-sm-4 col-md-3 product-content">
            <% link_to product_path(product) %>
              <% if product.photos.present? %>
                <%= link_to image_tag(product.photos[0].image.thumb.url, class: "thumbnail"), product_path(product) %>
              <% else %>
                <%= link_to image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>

            <br>
            <div class="product-info">
              <%= link_to(product.title, product_path(product)) %>
              <br><br>
              <p>￥ <%= link_to(product.price, product_path(product)) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
